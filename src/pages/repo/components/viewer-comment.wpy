<template>

  <view wx:if="{{isShowFlag}}" class="mask-container" @tap="_onDoNothingHandler">

    <view class="mask-content" @tap="_onDoNothingHandler">

      <!-- 头部评论数 -->
      <view class="mask-header">
        <view class="mask-header-title">{{isLoading ? "加载中..." : commentList.length + "条评论"}}</view>
        <view class="mask-header-btn" @tap="_onClickCloseButtonHandler">
          <image class="mask-header-btn-ic" src="/images/ic-dialog-close.png"></image>
        </view>
      </view>

      <!-- 评论列表 -->
      <scroll-view class="mask-list" scroll-y bindscrolltolower="_loadMoreHandler">

        <repeat for="{{commentList}}" index="idx" item="comment">
          <view class="mask-list-item">
            <image class="mask-list-header" src="{{comment.from_avatar}}"></image>
            <view class="mask-list-info" @tap="_onClickCommentItemHandler" data-index="{{idx}}">
              <text class="mask-list-name">{{comment.from_name}}</text>
              <text class="mask-list-content">{{comment.content}}</text>
              <text wx:if="{{comment.fmtTime}}" class="mask-list-date">{{comment.fmtTime}}</text>

              <!-- 子评论列表 -->
              <view wx:if="{{comment.isShowMore}}">
                <repeat for="{{subcomments[comment._id]}}" index="subIndex" item="subComment">
                  <view class="mask-list-item">
                    <image class="mask-list-sub-header" src="{{subComment.from_avatar}}"></image>
                    <view class="mask-list-info" @tap="_onClickSubCommentItemHandler" data-comment="{{subComment}}">
                      <text class="mask-list-name">{{subComment.from_name}}</text>
                      <rich-text class="mask-list-sub-content" nodes="{{subComment._content}}"></rich-text>
                      <text wx:if="{{subComment.fmtTime}}" class="mask-list-date">{{subComment.fmtTime}}</text>
                    </view>
                  </view>
                </repeat>
              </view>
            </view>
          </view>
          <!-- 展开子评论 -->
          <view wx:if="{{comment.amount > 0 && !comment.isShowMore}}" class="mask-list-more-btn" @tap="_onClickOpenCommentHandler" data-index="{{idx}}">查看所有评论</view>
        </repeat>

        <errortip wx:if="{{error}}"></errortip>

        <view class="list-footer-space"></view>

      </scroll-view>

      <view class="toolbar">
        <input class="toolbar-input" value="{{inputValue}}" placeholder="{{inputPlaceholder}}" focus="{{inputFocus}}" confirm-type="send" bindconfirm="_onClickSendButtonHandler" bindinput="_onGetInputValueHandler"></input>
        <view class="toolbar-btn" @tap="_onClickSendButtonHandler">发送</view>
      </view>

    </view>

  </view>

</template>


<style>

  .mask-container {
    position: fixed;
    z-index: 99999;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.7);
  }

  .mask-content {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 80%;
    background-color: white;
    display: flex;
    flex-direction: column;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    overflow: hidden; 
  }

  .mask-header {
    width: 100%;
    height: 80rpx;
    display: flex;
    background-color: #eeeeee;
  }

  .mask-header-title {
    margin-left: 80rpx;
    flex: 1;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: var(--font-tip);
    color: black;
  }

  .mask-header-btn {
    width: 80rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .mask-header-btn-ic {
    width: 35rpx;
    height: 35rpx;
  }

  .mask-list {
    width: 100%;
    height: calc(100% - 180rpx);
    display: flex;
    flex-direction: column;
  }

  .mask-list-item {
    width: 100%;
    height: auto;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
    display: flex;
  }

  .mask-list-header {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    background-color: lightgray;
  }

  .mask-list-info {
    margin-left: 20rpx;
    flex: 1;
    height: auto;
    display: flex;
    flex-direction: column;
  }

  .mask-list-name {
    font-size: var(--font-stitle);
    color: gray;
  }
  
  .mask-list-content {
    margin-top: 10rpx;
    font-size: var(--font-title);
    color: #222222;
  }

  .mask-list-date {
    margin-top: 6rpx;
    font-size: var(--font-tip);
    color: gray;
  }

  .mask-list-more-btn {
    margin-left: 120rpx;
    width: auto;
    height: 50rpx;
    display: flex;
    align-items: center;
    font-size: var(--font-detial);
    color: var(--color-blue);
  }

  .mask-list-sub-header {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    background-color: lightgray;
  }

  .mask-list-sub-content {
    margin-top: 10rpx;
    font-size: var(--font-detial);
    color: #222222;
  }

  .list-footer-space {
    width: 100%;
